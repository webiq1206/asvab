{
  "version": 2,
  "builds": [
    {
      "src": "index.html",
      "use": "@vercel/static"
    },
    {
      "src": "admin/package.json",
      "use": "@vercel/static-build",
      "config": {
        "buildCommand": "cd admin && npm ci && npm run build",
        "outputDirectory": "admin/build"
      }
    }
  ],
  "routes": [
    {
      "src": "/admin/(.*)",
      "dest": "/admin/build/$1"
    },
    {
      "src": "/admin",
      "dest": "/admin/build/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}