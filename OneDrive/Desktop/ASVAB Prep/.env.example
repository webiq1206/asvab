# ASVAB Prep Environment Configuration
# Copy this file to .env and update values for your environment

# Database Configuration
DATABASE_URL="postgresql://asvab_user:your_secure_password@localhost:5432/asvab_prep"
POSTGRES_DB=asvab_prep
POSTGRES_USER=asvab_user
POSTGRES_PASSWORD=your_secure_password
POSTGRES_PORT=5432

# Redis Configuration
REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD=your_redis_password
REDIS_PORT=6379

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_in_production
JWT_REFRESH_SECRET=your_super_secret_refresh_key_change_in_production
JWT_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# API Keys
OPENAI_API_KEY=your_openai_api_key_for_ai_features
STRIPE_SECRET_KEY=your_stripe_secret_key_for_payments
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_smtp_email@gmail.com
SMTP_PASS=your_smtp_app_password

# Mobile App Store Configuration
APPLE_APP_STORE_SECRET=your_apple_app_store_shared_secret
GOOGLE_PLAY_SERVICE_ACCOUNT=/path/to/google-play-service-account.json

# Application Configuration
NODE_ENV=development
PORT=3001
BACKEND_PORT=3001
CORS_ORIGIN=http://localhost:3000,http://localhost:19006

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_PREMIUM_MULTIPLIER=2

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/asvab-backend.log

# Military Branch Configuration
DEFAULT_BRANCH=ARMY
SUPPORTED_BRANCHES=ARMY,NAVY,AIR_FORCE,MARINES,COAST_GUARD,SPACE_FORCE

# Subscription Configuration
FREE_TIER_QUESTION_LIMIT=50
FREE_TIER_QUIZ_LIMIT=1
FREE_TIER_CATEGORIES=3
PREMIUM_PRICE_MONTHLY=997
TRIAL_PERIOD_DAYS=7

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_SECRET=your_session_secret_key
COOKIE_SECRET=your_cookie_secret_key

# External Services
GOOGLE_OAUTH_CLIENT_ID=your_google_oauth_client_id
GOOGLE_OAUTH_CLIENT_SECRET=your_google_oauth_client_secret
APPLE_OAUTH_CLIENT_ID=your_apple_oauth_client_id
APPLE_OAUTH_CLIENT_SECRET=your_apple_oauth_client_secret

# Monitoring and Analytics
ENABLE_PROMETHEUS=true
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_ADMIN_PASSWORD=secure_grafana_password

# Docker Configuration
HTTP_PORT=80
HTTPS_PORT=443
SEED_DATABASE=false

# Development Configuration
ENABLE_SWAGGER=true
ENABLE_CORS=true
ENABLE_DEBUG_LOGS=false

# Military Content Configuration
ENABLE_MILITARY_TERMINOLOGY=true
ENABLE_BRANCH_FILTERING=true
ENABLE_MILITARY_JOBS=true
MILITARY_CONTENT_API_KEY=your_military_content_api_key

# Notification Configuration
ENABLE_PUSH_NOTIFICATIONS=true
FCM_SERVER_KEY=your_firebase_server_key
APNS_KEY_ID=your_apple_push_key_id
APNS_TEAM_ID=your_apple_team_id

# Performance Configuration
ENABLE_REDIS_CACHING=true
CACHE_TTL_SECONDS=3600
ENABLE_COMPRESSION=true
MAX_CONCURRENT_REQUESTS=1000

# Backup Configuration
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30
S3_BACKUP_BUCKET=asvab-backups
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1